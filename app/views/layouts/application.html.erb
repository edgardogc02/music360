<!doctype html>
<html>
<head>
  <%= render "layouts/head" %>
</head>
<body role="application" class="<%= body_classes %>">
	<header role="banner">
		<div class="row">
			<h1 class="medium-3 columns"><%= link_to "Music360", :root%></h1>
			<div class="medium-6 columns">
				<form role="search" action="/search">
					<input type="search" results="1" placeholder="Search â€¦" name="q" />
				</form>
			</div>
			<div class="medium-2 columns">
				<div class="header-controls">
					<%= link_to "Sign out", logout_path %>
				</div>
			</div>
		</div>
	</header>
	
	<div class="page-wrap">
		<div class="medium-3 columns">
			<section class="side-panel">
				<%= render current_user, locals: {user: current_user} %>

				<nav role="navigation">
					<ul>
						<%= nav_link "Home", :root, icon: "house" %>
						<%= nav_link "People", peoples_path, icon: "users"%>
						<%= nav_link "Songs", songs_path, icon: "music"%>
						<%= nav_link "Artists", artists_path, icon: "music"%>
						<%= nav_link "Challenges", challenges_path, icon: "challenge"%>
						<%= nav_link "Apps", apps_path, icon: "challenge"%>
					</ul>
				</nav>
			</section>
		</div>
		
		<div class="medium-9 columns">
			<main role="main" class="row box">
				<%= yield %>
			</main>
		</div>
		
		<div class="medium-4 columns">
			<aside role="complementary" class="box">
				<%= yield :sidebar %>

				<section>
					<p class="detail"><small>Ads</small></p>
					<img src="http://placehold.it/300x600" alt="" />
				</section>
			</aside>
		</div>
	</div>

<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
</body>
</html>
