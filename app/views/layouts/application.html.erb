<!doctype html>
<html>
<head>
  <%= render "layouts/head" %>
</head>
<body role="application" class="<%= body_classes %>">
	<header>
		<nav class="navbar navbar-default navbar-fixed-top" role="navbar">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
				    <div class="navbar-header pull-left">
				      <%= link_to :root, class: "logo" do %>
				      	<%= image_tag(asset_path('logo.png')) %>
				      <% end %>
				    </div>
				    <% if signed_in? %>
					    <div class="navbar-header pull-right">
					      <%= link_to logout_path, {class: "btn", id: "sign_out"} do %>
				          <i class="glyphicon glyphicon-log-out"></i> Sign out
				        <% end %>
					    </div>
				    <% end %>
					</div>
				</div>
			</div>
		</div>
	</header>

	<div id="page-wrap">
		<div class="container">
			<div class="row">
			  <% if signed_in? %>
		  		<div class="col-md-3 col-sm-3">
		  			<section class="side-panel">
		  				<%= render current_user, locals: {user: current_user} %>

		          <%= render "shared/left_menu" %>
		  			</section>
		  		</div>
		    <% end %>

				<div class="col-md-9 col-sm-9">

          <% flash.each do |name, msg| %>
            <%= content_tag :div, class: "alert alert-#{name} #{alert_class(name)} alert-dismissable" do %>
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= msg %>
            <% end %>
          <% end %>

					<main role="main">
						<%= yield %>
					</main>
				</div>
			</div>
		</div>
	</div>

  <%= render "shared/footer" %>

  <!-- Code by Johan (http://johanbrook.com) -->
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= js_scripts %>
</body>
</html>