<!doctype html>
<html>
<head>
  <%= render "layouts/head" %>
</head>
<body role="application" class="<%= body_classes %>">
<div id="fb-root"></div>
	<header>
		<nav class="navbar navbar-default navbar-fixed-top" role="navbar">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
				    <div class="navbar-header pull-left">
				      <%= link_to :root, class: "logo" do %>
				      	<%= image_tag(asset_path('logo.png')) %>
				      <% end %>
				    </div>
				    <% if signed_in? %>
					    <div class="navbar-header pull-right">
					      <%= link_to logout_path, {class: "btn", id: "sign_out"} do %>
				          <i class="glyphicon glyphicon-log-out"></i> Sign out
				        <% end %>
					    </div>
				    <% end %>
					</div>
				</div>
			</div>
		</div>
	</header>

	<div id="page-wrap">
		<div class="container">
			<div class="row">
			  <% if signed_in? %>
		  		<div class="col-md-3 col-sm-3">
		  			<section class="side-panel">
		  				<%= render current_user, locals: {user: current_user} %>

		          <%= render "shared/left_menu" %>
		  			</section>
		  		</div>
		    <% end %>

				<div class="col-md-9 col-sm-9">

          <% flash.each do |name, msg| %>
            <%= content_tag :div, class: "alert alert-#{name} #{alert_class(name)} alert-dismissable" do %>
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <%= msg %>
            <% end %>
          <% end %>

					<main role="main">
						<%= yield %>
					</main>
				</div>
			</div>
		</div>
	</div>

  <footer class="footer-application">
  	<div class="container">
  		<div class="row">
				<div class="col-md-2 col-sm-4 col-xs-4">
					Â© <%= link_to "InstrumentChamp", :root %>
				</div>
				<div class="col-md-8 col-sm-4 col-xs-4 text-center">
					<a href="#" data-toggle="modal" data-target="#about_us">About us</a> |
					<a href="#" data-toggle="modal" data-target="#privacy_policy">Privacy Policy</a> |
					<a href="#" data-toggle="modal" data-target="#terms_of_service">Terms of Service</a> |
					<a href="#" data-toggle="modal" data-target="#contact_us">Contact us</a> |
					<a href="#" data-toggle="modal" data-target="#press">Press</a>
				</div>
				<div class="col-md-2 col-sm-4 col-xs-4 clearfix">
					<div class="pull-right">
						<a class="twitter-btn" href="https://twitter.com/instrumentchamp" target="_blank"></a>
						<a class="fb-btn" href="https://www.facebook.com/InstrumentChamp?ref=ts&fref=ts" target="_blank"></a>
					</div>
				</div>
			</div>
    </div>
  </footer>

	<div class="modal fade" id="privacy_policy" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog modal-lg">
	    <div class="modal-content">
	      <div class="modal-body">
	        <%= render "statics/privacy_policy" %>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="modal fade" id="terms_of_service" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog modal-lg">
	    <div class="modal-content">
	      <div class="modal-body">
	        <%= render "statics/terms_of_service" %>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="modal fade" id="about_us" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog modal-lg">
	    <div class="modal-content">
	      <div class="modal-body">
	        <%= render "statics/about_us" %>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="modal fade" id="press" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-body">
	        <%= render "statics/press" %>
	      </div>
	    </div>
	  </div>
	</div>
	<div class="modal fade" id="contact_us" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-body">
	        <%= render "statics/contact_us" %>
	      </div>
	    </div>
	  </div>
	</div>



  <!-- Code by Johan (http://johanbrook.com) -->
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= js_scripts %>
</body>
</html>