<h1><i class="icon-star"></i> Most popular 50 artists</h1>


<ul class="block-grid">

  <% @artists.each do |artist| %>
    <li>
      <%= image_tag artist.images.first.url %>
      <div class="overlay username">
        <%= artist.name %>
      </div>
      <ul class="overlay-actions list">
        <li><%= link_to "Follow", "#" %></li>
        <li><%= link_to "Challenge", "#" %></li>
      </ul>
    </li>
  <% end %>

</ul>
