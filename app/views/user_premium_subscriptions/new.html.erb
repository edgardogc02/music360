<h1 class="page-header"><small><i class="glyphicon glyphicon-plus"></i></small> Premium</h1>

<div class="row">
	<div class="col-md-6 col-sm-6">
		<div class="well text-center">
			<h2>Free</h2>
			<p>
				Learn to play your favorite instrument <br />
				Challenge your friends online <br />
				Completely free
			</p>
			<p>
				<i class="glyphicon glyphicon-phone glyphicons-lg"></i>
				<i class="glyphicon glyphicon-phone glyphicons-lg"></i>
			</p>
			<p>
				Play with guitar, piano or drums made possible by ads
			</p>
			<%= link_to 'Get Free', get_free_path, class: 'btn btn-default btn-lg' %>
		</div>
	</div>
	<div class="col-md-6 col-sm-6">
		<div class="well text-center">
			<h2>Premium</h2>
			<p>
				Play in a band with your friends - Multiplayer game <br />
				Ad -free <br />
				$9.99 per month <br />
			</p>
			<p>
				<i class="glyphicon glyphicon-phone glyphicons-lg"></i>
				<i class="glyphicon glyphicon-phone glyphicons-lg"></i>
				<i class="glyphicon glyphicon-phone glyphicons-lg"></i>
			</p>
			<p>
				Extended catalogue of free songs
			</p>

			<%= link_to "Get Premium", "#", {class: "btn btn-primary btn-lg"} %>
		</div>
	</div>

  <div class="row">
    <% PremiumPlan.all.each do |premium_plan| %>
      <div class="col-md-6 col-sm-6">
        <div class="well text-center">
          <h2><%= premium_plan.name %></h2>
          <p>
            <p>
              Just <%= premium_plan.price %> EUR
            </p>
            <p>
              <%= link_to "Get Premium", new_user_premium_subscription_path(premium_plan_id: premium_plan.id), {class: "btn btn-primary btn-lg premium_plan_selected"} %>
            </p>
          </p>
        </div>
      </div>
    <% end %>
  </div>
  <% if @user_premium_subscription_form.premium_plan %>

    <%= render "shared/payment_method_selection" %>

    <div class="hide" id="user_premium_subscription_form">
      <%= simple_form_for @user_premium_subscription_form, url: user_premium_subscriptions_path, html: {id: "user_purchase_form"} do |f| %>

        <%= render "shared/credit_card_details", f: f %>

        <%= f.input :premium_plan_id, as: :hidden %>
        <%= f.input :payment_method_id, as: :hidden %>
        <%= f.input :amount, input_html: { value: @user_premium_subscription_form.premium_plan.price, id: "amount" }, as: :hidden %>

        <%= f.button :submit, "Purchase Now", {class: "btn btn-primary btn-lg", id: "submit_purchase_form"} %>
      <% end %>
    </div>

    <%= content_for(:js_scripts) do %>

      <script type="text/javascript">
        var PAYMILL_PUBLIC_KEY = "<%= PAYMILL_PUBLIC_KEY %>";
      </script>
      <script type="text/javascript" src="https://bridge.paymill.com/"></script>

      <script type="text/javascript">
        $(document).ready(function() {
          submit_credit_card_payment();
        });
      </script>
    <% end %>

  <% end %>

</div>
