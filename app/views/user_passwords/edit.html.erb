<%= render 'shared/header_page', title: "Change password" %>

<div class="row">
	<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
		<%= simple_form_for @user, url: user_password_path(@user) do |f| %>
		  <%= f.input :password %>
		  <%= f.input :password_confirmation %>
		  
		  <%= f.button :submit, "Save" %>
		<% end %>
	</div>
</div>