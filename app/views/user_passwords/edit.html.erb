<h1 class="page-header"><small><i class="glyphicon glyphicon-cog"></i></small> Change password</h1>

<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
	<%= simple_form_for @user, url: user_password_path(@user) do |f| %>
	  <%= f.input :password %>
	  <%= f.input :password_confirmation %>
	  
	  <%= f.button :submit, "Save" %>
	<% end %>
</div>