<%= render 'shared/header_page', title: @title %>

<div class="refresh-button-home">
  <%= refresh_button %>
</div>

<% unless @challenges.blank? %>
	<div class="thumbnail-grid">
		<%= render @challenges %>
	</div>
	<% if @paginate %>
    <hr />
    <%= paginate @challenges %>
  <% end %>
<% else %>

<p class="no-content">
  No challenges right now
</p>

<% end %>