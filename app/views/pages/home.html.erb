<section class="get-started">
	<h1 class="huge">Great, let's get you started!</h1>

	<div><%= link_to "Quick start song", @song.desktop_app_uri, {class: 'btn btn-primary btn-huge'} %></div><br/>
	<div><%= link_to "Quick start challenge", new_challenge_path, {class: 'btn btn-danger btn-huge'} %></div>

</section>

<% if params[:take_tour] %>
  <%= content_for(:js_scripts) do %>

    <script type="text/javascript">
      // Instance the tour
      var tour = new Tour({
        name: "tour",
        container: "body",
        keyboard: true,
        storage: false,
        backdrop: true,
        reflex: true,
        steps: [
        {
          element: "#friends",
          title: "People",
          content: "<p>Follow and challenge people.</p><p>Connect with your friends, favorite artists and teachers</p>"
        },
        {
          element: "#music",
          title: "Songs",
          content: "<p>Learn to play a new song or create a new challenge</p>"
        },
        {
          element: "#challenges",
          title: "Challenges",
          content: "<p>Create a new challenge, accept a challenge or see the results from your previous challenges</p>"
        },
        {
          element: "#apps",
          title: "App Store",
          content: "<p>Download the game to your PC & MAC</p>"
        }
      ]});

      $(document).ready(function() {
        tour.init();
        tour.start();
      });
    </script>

  <% end %>
<% end %>
