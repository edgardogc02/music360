<% if params[:welcome_msg] %>

	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.0";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>

  <div class="modal fade welcome-modal" id="welcomeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-body">
	      	<div class="row">
	      		<% if current_user.is_facebook_user? %>
	      			<div class="col-lg-3">
		      			<br />
		      			<%= image_tag current_user.imagename_url, {alt: current_user.username, class: 'thumbnail'} %>	
		      		</div>
		      		<div class="col-lg-9">		      			
	      		<% else %>
		      		<div class="col-lg-12">		      			
						<% end %>
							<h1>Install InstrumentChamp<h1>
							<h2>Play music with your friends</h2>
							<p>
								If you want to play InstrumentChamp you just to make a quick and easy installation of the InstrumentChamp desktop application. Then you can challenge your friends online.
							</p>							
						</div>						
	      	</div>
	      	<div class="row">
						<div class="col-lg-12">
								<div class="fb-facepile" data-href="https://www.facebook.com/instrumentchamp" data-width="560" data-height="60" data-max-rows="1" data-colorscheme="light" data-size="medium" data-show-count="true"></div>
						</div>
					</div>			
	      </div>
	      <div class="modal-footer">
	      	<div class="clearfix">
						<div class="pull-left">									
							<span id="install-btn" class="hide"></span>
							<a href="<%= apps_path(auto_download: true) %>" data-no-turbolink='true' class="btn btn-primary btn-lg">Install InstrumentChamp Free</a>
							<%= link_to 'Cancel', apps_path, class: "btn btn-link" %>
						</div>
						<div class="pull-right">
							<%= link_to 'Read more', apps_path, class: "btn btn-link btn-lg" %>
						</div>
					</div>		
	      </div>
	    </div>
	  </div>
	</div>
<% end %>