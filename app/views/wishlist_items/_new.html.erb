<%= form_for current_user.current_wishlist.wishlist_items.build(song: song), remote: true do |f| %>
  <%= f.hidden_field :song_id %>
  <%= f.button :button, {class: "btn btn-danger btn-big-icon #{size}", id: "add_to_wishlist_#{song.id}"} do %>
    <%= content_tag :i, nil, class: "glyphicon glyphicon-heart" %>
  <% end %>
<% end %>