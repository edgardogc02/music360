<h1 class="huge light">Edit Song</h1>

<h2><%= @song.title %></h2>

<%= simple_form_for @song do |f| %>

  <div>
    <%= f.input :title %>
    <%= f.input :writer %>
    <%= f.input :length %>
    <%= f.input :difficulty %>
    <%= f.input :arranger_userid %>
    <%= f.input :comment %>
    <%= f.input :status %>
    <%= f.input :onclient %>
    <%= f.input :published_at %>
    <%= f.input :cover, label: false, hint: "Upload a cover image" %>
  </div>

  <div>
    <%= f.submit "Save", {class: "btn btn-primary"} %>
  </div>

<% end %>
