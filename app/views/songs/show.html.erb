<%= render 'shared/header_page', title: @song.title, link_text: @song.artist.title, link_path: artist_path(@song.artist) %>

<!--<iframe width="300" height="380"  scrolling="no" frameborder="0" allowtransparency="true" style="border:none; overflow:hidden; height:380px;" src="http://www.musicnodes.com/widget/public/view?wid=2105&id=538dbb91f51e46ff6f0008ce&services=spotify,youtube,deezer"></iframe>-->

<div class="row">
	<div class="col-lg-3">
		<p>
			<%= image_tag @song.cover_url, alt: @song.title, class: "thumbnail" %>
		</p>
		<p>
			<%= link_to @song.play_url, class: "btn btn-primary" do %>
				<i class="glyphicon glyphicon-play"></i> Play
			<% end %>			
			<%= link_to "Create challenge", new_challenge_path(song_id: @song.id), class: "btn btn-primary" %>
		</p>
	</div>
	
	<% unless @scores.blank? %>
		<div class="col-lg-9">
			<%= render 'shared/header_page', title: 'Top Scores', sub_header: true %>
			
			<table width="100%" class="datagrid">
				<tr class="head">
					<td>User</td>
					<td>Points</td>
					<td>Instrument</td>
					<td></td>
				</tr>
				<% @scores.each do |score| %>
					<% if score.user %>
						<tr class="<%= cycle("odd", "even") %>">
							<td><%= link_to score.user.username, person_path(score.user), class: 'btn-secondary-color' %></td>
							<td><%= score.score %></td>
							<td><%= score.instrument.name %></td>
							<td align="right"><%= link_to 'Challenge', new_challenge_path(song_id: score.song.id, challenged_id: score.user.id), class: 'btn btn-primary btn-sm' %></td>
						</tr>
					<% end %>
				<% end %>
			</table>
		</div>
	<% end %>	
	
</div>
