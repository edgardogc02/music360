<%= render 'search_form' %>

<br />

<%= render 'shared/header_page', title: 'Choose a song to start challenge', sub_header: true, view_more: 'View all', view_more_path: songs_path(challenged_id: params[:challenged_id]) %>

<div class="thumbnail-grid row">
  <%= render partial: "song", collection: @songs %>
</div>

<script>
	$(document).ready(function(){
		$(".thumbnail-grid .thumbnail").hover((function() {
		  $(this).children(".overlay-actions").show();
		}), function() {
		  $(this).children(".overlay-actions").hide();
		});
	});
</script>
