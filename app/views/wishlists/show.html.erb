<%= render 'shared/header_page', title: 'Wishlist' %>

<% unless @wishlist.wishlist_items.empty? %>
  <% @wishlist.wishlist_items.each do |wishlist_item| %>
    <p>
      <%= image_tag wishlist_item.song.cover_url, class: "avatar-sm" %>
      <%= wishlist_item.song.title %>
      <%= wishlist_item.song.decorate.add_to_cart_button("btn-sm") %>
      <%= link_to wishlist_item_path(wishlist_item), {method: :delete, class: 'btn btn-sm btn-default'} do %>
        <i class="glyphicon glyphicon-trash"></i>
      <% end %>
    </p>
  <% end %>
<% else %>
  <div class="alert alert-warning">
    Your wishlist is empty.
  </div>
<% end %>