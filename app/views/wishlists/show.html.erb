<%= render 'shared/header_page', title: 'Wishlist' %>

<% unless @wishlist.wishlist_items.empty? %>
  <div class="row">
    <div class="col-lg-6">

      <table width="100%" class="shopping-cart-datagrid">
        <tr class="head">
          <td>Product description</td>
          <td></td>
          <td></td>
        </tr>

        <% @wishlist.wishlist_items.each do |wishlist_item| %>
          <tr>
            <td><%= image_tag wishlist_item.song.cover_url, class: "avatar-sm" %></td>
            <td><%= wishlist_item.song.title %></td>
            <td><%= wishlist_item.song.decorate.add_to_cart_button("btn-sm") %></td>
            <td><%= link_to wishlist_item_path(wishlist_item), {method: :delete, class: 'btn btn-sm btn-default'} do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %></td>
          </tr>
        <% end %>

      </table>
    </div>
  </div>
<% else %>
  <div class="alert alert-warning">
    Your wishlist is empty.
  </div>
<% end %>