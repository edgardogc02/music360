if ($('#follow_<%= @followed_user.id %>').parent('.artist-show-follow').length > 0) {
  $('#follow_<%= @followed_user.id %>').replaceWith("<%= j render 'users/follow_unfollow', user: @followed_user, css_classes: "" %>");
} else {
  $('#follow_<%= @followed_user.id %>').replaceWith("<%= j render 'users/follow_unfollow', user: @followed_user, css_classes: "btn-sm action_button" %>");
}

if ($('#followers_count').length) {
  $('#followers_count').html('<%= j render "users/followers_count", user: @followed_user %>');
}
