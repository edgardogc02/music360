<div class="post-feed">
	<div class="clearfix">
		<div class="pull-left user-thumb">
			<a href="<%= person_path(challenge_post.publisher) %>">
	      <div class="thumbnail">
	      	<%= image_avatar(challenge_post.publisher) %>
	      </div>
	    </a>
		</div>
		<div class="pull-left">
			<h4 class="media-heading"><%= link_to challenge_post.publisher.username, person_path(challenge_post.publisher) %></h4>
      <div class="small spacer-md text-muted"><%= time_ago_in_words(challenge_post.created_at) %> ago</div>
      <%= challenge_post.message %>
		</div>
	</div>
	<%= render "group_posts/post_actions", likeable: challenge_post, likeable_parent: challenge_post.challenge, commentable: challenge_post, commentable_parent: challenge_post.challenge %>
</div>