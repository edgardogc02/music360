	<section id="what-it-is" class="content-section text-left">
		<div class="container">
		  <div class="row">
	  		<div class="col-lg-6">
		      <h2>A real music game</h2>
		      <p>
		        InstrumentChamp is a music game service for learning to play and play music with your friends online. You play with real instruments like acoustic guitar, piano and drums but you also sing  along.
		      </p>
		      <br /><br />
          <%= link_to facebook_signin_path, id: "facebook_signin_1", class: 'fb_button' do %>
          	<div class="Spinner"></div>
					  <span class="separator"></span>
					  <span class="text">Continue</span>
          <% end %>
          <br />
          Or sign up with your <%= link_to "email", signup_path %>
		    </div>
		  </div>
	  </div>
	</section>

