<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          &times;
        </button>
        <h3 class="modal-title" id="myModalLabel">Sign in</h3>
      </div>
      <div class="modal-body">
        <%= form_tag sessions_path, id: "login-form" do %>
        <p>
            <%= text_field_tag :username, "", placeholder: "Username", class: "form-control input-lg", required: true, autofocus: true %>
            <%= password_field_tag :password, "", placeholder: "Password", class: "form-control input-lg", required: true %>
        </p>
        <p>
          	<%= submit_tag "Sign in", {class: "btn btn-primary btn-lg", id: "sign_in"} %>
        </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<section id="page-top" class="intro">
  <div class="intro-body">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
        	<%= image_tag(asset_path('landing/play-logo.png')) %>

          <h1 class="brand-heading">Learn to play music with a real music game</h1>
          <br /><br />
          <%= link_to facebook_signin_path, id: "facebook_signin", class: 'fb_button' do %>
          	<div class="Spinner"></div>
					  <span class="separator"></span>
					  <span class="text">Continue</span>
          <% end %>
          <br />
          Or sign up with your <%= link_to "email", signup_path %>
        </div>
      </div>
    </div>
  </div>
</section>

