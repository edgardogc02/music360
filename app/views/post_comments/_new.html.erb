<%= simple_form_for [commentable_parent, commentable, PostComment.new], { remote: true, html: { id: "new_"+commentable.class.to_s.underscore+"_"+commentable.id.to_s } } do |f| %>
  <%= f.input :comment, placeholder: 'Write a comment...', label: false %>
  <%= f.button :submit, 'Comment', class: 'btn btn-sm' %>
<% end %>


