<table class="email_container" width="600px;">
	<tr>
		<td>
			<%= render 'email_notifier/header' %>
		</td>
	</tr>
</table>
<table class="email_container">
	<tr>
		<td>
			<div class="email_content" style="font-family: arial; font-size: 12px; color: #333; padding-left: 20px;">
        <p>
          Hi,
        </p>

        <p>
          Please click the link to reset your password.
        </p>

        <p>
        	<br />
        		<%= link_to "Reset my password", change_password_reset_url(@user.password_reset_token, host: @user.created_by), {style: "background: #45B9B6; color: #FFF; padding: 10px 20px; font-size: 14px; border-radius: 5px; text-decoration: none;"} %>
        	<br /><br />
        </p>

				<p>
					Remember to login with your username: <b><%= @user.username %></b>
				</p>

				<p>
				  Kind regards, <br />
				  The instrumentchamp team.
			  </p>
			</div>
		</td>
	</tr>
</table>
<table class="email_container">
	<tr>
		<td class="email_footer">
			<%= render 'email_notifier/footer' %>
		</td>
	</tr>
</table>

