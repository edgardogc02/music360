<table class="email_container" width="600px;">
	<tr>
		<td>
			<%= render 'email_notifier/header' %>
		</td>
	</tr>
</table>
<table class="email_container">
	<tr>
		<td>
			<div class="email_content" style="font-family: arial; font-size: 12px; color: #333; padding-left: 20px;">
        <p>
          Hi,
        </p>

        <p>
          <%= link_to @user.username, person_url(@user.username, host: @user.created_by) %> invited you to join the
          <%= link_to @group.name, group_url(@group, host: @user.created_by) %> group on InstrumentChamp
        </p>

        <p>
        	<br />
        		<%= link_to "View group", group_url(@group, host: @user.created_by), {style: "background: #45B9B6; color: #FFF; padding: 10px 20px; font-size: 14px; border-radius: 5px; text-decoration: none;"} %>
        	<br /><br />
        </p>

				<p>
				  Kind regards, <br />
				  The instrumentchamp team.
			  </p>
			</div>
		</td>
	</tr>
</table>
<table class="email_container">
	<tr>
		<td class="email_footer">
			<%= render 'email_notifier/footer' %>
		</td>
	</tr>
</table>

