<% if activity.trackable.challenge %>

  <% if activity.trackable.challenge.group %>
    <%= render '/public_activity/songscore/group_challenge_create', activity: activity %>
  <% else %>
    <%= render '/public_activity/songscore/challenge_create', activity: activity %>
  <% end %>

<% else %>

    <%= render '/public_activity/songscore/song_create', activity: activity %>

<% end %>