<%= render 'shared/header_page', title: 'Shopping cart and Checkout' %>

<% unless @cart.line_items.empty? %>

  <div class="row">
    <div class="col-lg-6">
      <h2>Shopping cart</h2>

      <table width="100%" class="shopping-cart-datagrid">
        <tr class="head">
          <td>Product description</td>
          <td>Price</td>
          <td></td>
        </tr>
        <% @cart.line_items.each do |line_item| %>
          <tr>
            <td>
              <%= image_tag line_item.song.cover_url, class: "avatar-sm" %>
              <%= link_to line_item.song.title, line_item.song %>
            </td>
            <td><%= number_to_currency(line_item.song.cost) %></td>
            <td align="right">
              <%= link_to line_item_path(line_item), {method: :delete, class: 'btn btn-sm btn-default'} do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>

      <br /><br />

      <div class="text-right">
        <p>
          <b>Total &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= number_to_currency(@cart.total_price) %></b>
        </p>

        <!--
        <p>
          <%= link_to "Continue shooping", songs_path, {class: "btn btn-default"} %>
          <%= link_to "Checkout", new_checkout_path, {class: "btn btn-primary"} %>
        </p>
        -->
      </div>

    </div>
    <div class="col-lg-6">
      <h2>Checkout</h2>
    </div>
  </div>

<% else %>

  <div class="alert alert-warning">
    Your shooping cart is empty.
  </div>

<% end %>
