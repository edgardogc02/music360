<% if @resumed_group_challenge_leaders %>

  <h2>Leaderboard</h2>

  <table width="100%" class="datagrid">
    <tr class="head">
      <td>User</td>
      <td>Instrument</td>
      <td>Points</td>
      <td></td>
    </tr>
    <% @resumed_group_challenge_leaders.each do |group_challenge_leader| %>
      <tr class="<%= cycle("odd", "even") %>">
        <td>
        	<%= link_to person_path(group_challenge_leader.user.username) do %>
        		<%= image_tag group_challenge_leader.user.imagename, class: 'avatar-xs' %>
        	<% end %>
        </td>
        <td><i class="icon-instrument <%= group_challenge_leader.instrument.name.downcase %>-sm"></i></td>
        <td><%= group_challenge_leader.max_score %></td>
        <td></td>
      </tr>
    <% end %>
  </table>

<% end %>
