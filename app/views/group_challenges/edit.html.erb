<%= render 'shared/header_page', title: "Edit challenge" %>

<br /><br />

<%= simple_form_for [@group, @challenge] do |f| %>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :start_at, as: :string, input_html: { id: 'datetimepicker', data: {"date-format" => "YYYY-MM-DD hh:mm A"} } %>
    </div>
    <div class="col-md-6">
      <%= f.input :duration_in_days, as: "integer" %>
    </div>
  </div>

  <%= f.input :description %>

  <div class="text-right">
    <%= link_to "Back", group_challenge_path(@group, @challenge), class: "btn btn-default" %>
    <%= f.submit "Save", {class: "btn btn-primary"} %>
  </div>

<% end %>