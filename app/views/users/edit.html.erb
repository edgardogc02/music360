<%= render 'shared/header_page', title: "Edit profile" %>

<div class="row">
	<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
		<%= simple_form_for @user, url: person_path(@user) do |f| %>
		  <%= f.input :first_name %>
		  <%= f.input :last_name %>
		  <%= f.input :phone_number %>
		  <%= f.input :username %>
		  <%= f.input :email %>
		  
		  <%= f.button :submit, "Save" %>
		<% end %>
	</div>
</div>