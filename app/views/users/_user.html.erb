<% if defined? modal %>
	<div class="masonry-img col-md-3 col-sm-4 col-xs-6 user-thumb">
<% elsif defined? right_column %>
	<div class="masonry-img col-lg-6 col-md-4 col-sm-4 col-xs-6 song-thumb">
<% else %>
	<div class="masonry-img col-md-2 col-sm-4 col-xs-6 user-thumb">
<% end %>
	<%= link_to person_path(user), class: 'thumbnail' do %>
		<%= image_avatar(user) %>
	<% end %>

	<div class="actions-content">
		<div class="spacer-md">
			<div class="link_header truncate primary-text-color" data-toggle="tooltip" title="<%= user.username %>"><%= link_to user.username, person_path(user) %></div>
		</div>
		<div class="spacer-sm">
		  <%= user.display_follow_button %>
		</div>
		<%= user.challenge_button(params[:song_id]) %>
		<%= user.invite_to_group(params[:group_id]) %>
	</div>
</div>