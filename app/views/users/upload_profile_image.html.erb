<h1 class="page-header"><small><i class="glyphicon glyphicon-user"></i></small> <%= @user.username%></h1>

<%= form_for @user, url: person_path(@user), html: {multipart: true} do |f| %>
  <p>
    <%= f.file_field :imagename %>
  </p>
  <p>
    <label>or image URL:</label>
    <%= f.text_field :remote_imagename_url %>
  </p>
  <br />
  <%= f.submit "Save", {class: 'btn btn-primary'} %>
<% end %>