<%= content_tag :div, {id: "follow_#{user.id}" } do %>
  <%= simple_form_for current_user.inverse_user_followers.build(user_id: user.id), html: {remote: true, id: "new_user_follower_#{user.id}"} do |f| %>
    <%= f.input :user_id, as: :hidden %>
  <% end %>

  <%= link_to "Follow", "#", {class: "follow_user btn btn-primary " + css_classes} %>
<% end %>
