<%= render 'shared/header_page', title: 'Sign Up' %>

<div class="row">
	<div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
		<%= simple_form_for @user, url: "/people" do |f| %>
		  <%= f.input :username %>
		  <%= f.input :email %>
		  <%= f.input :password %>
		  <%= f.input :password_confirmation %>
		  <%= f.input :feedback_call, as: :boolean, label: "Call me for feedback?" %>
		  <%= f.input :phone_number, wrapper_html: { class: 'sign_up_phone_number' } %>
		  <%= f.button :submit, "Sign Up" %>
		<% end %>
	</div>
</div>